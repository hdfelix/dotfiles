[user]
	name = Hector D. Felix
	email = hdfelix@gmail.com

[core]
	excludesfile = /Users/Hector/.gitignore_global
	whitespace = trailing-space,space-before-tab
	editor = /usr/bin/vim

[color]
	ui = auto

[diff]
	mnemonicprefix = true
	tool = /usr/bin/vimdiff

[branch]
	autosetupmerge = true

[push]
	default = tracking

[merge]
	stat = true

[alias]
	wtf = !~/code/git-wtf/git-wtf
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lg2 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	undo-commit = reset --soft HEAD^
	unstage = reset --
	g = grep --break --heading --line-number
  s = log --oneline --grep=
	sla = log --oneline --decorate --graph --all
	glog = log -E -i --grep
	car = commit --amend --no-edit
	uncommit = reset --soft HEAD^
  ki = stash --keep-index
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  au = add -u
  head = !git l -1
  h = !git head
  r = !git --no-pager l -20
  ra = !git r --all
  ff = merge --ff-only
  pullff = pull --ff-only
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all
  pom = push origin master
        switch = !legit switch \"$@\"
        branches = !legit branches
        sprout = !legit sprout \"$@\"
        unpublish = !legit unpublish \"$@\"
        harvest = !legit harvest \"$@\"
        sync = !legit sync \"$@\"
        publish = !legit publish \"$@\"
        graft = !legit graft \"$@\"
  report = "log --after='august last year' --before='september' --format='%cd|%cn|%s' --date=short --no-merges"

[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[credential]
	helper = osxkeychain

[grep]
	extendRegexp = true
	lineNumber = true
